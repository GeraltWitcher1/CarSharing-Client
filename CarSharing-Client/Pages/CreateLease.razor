@page "/create-lease/{listingId:int}/{DateFrom:datetime}/{DateTo:datetime}"
<h3>CreateLease</h3>

<EditForm>
 <div class="form-row">
        <div class="form-group col-md-5">
            <label>Date from </label>
            <p> class="form-control" placeholder="@DateTime.UtcNow" </p>
        </div>
        <div class="form-group col-md-5">
            <label >Date to</label>
           
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-5">
            <label >Price</label>
          
        </div>

        <div class="form-group col-md-5">
            <label >Location</label>
           
        </div>

    </div>

    <div class="col-4 ml-2 mt-4">
        <p class="actions">
            <button class="btn btn-outline-dark " type="submit">Lease vehicle</button>
            <button class="btn btn-danger" type="button" >Cancel</button>
        </p>
    </div>
</EditForm>




@code
{
    [Parameter]
    public string listingId { get; set; }
    [Parameter]
    public DateTime DateFrom { get; set; }
    [Parameter]
    public DateTime DateTo { get; set; }

}
